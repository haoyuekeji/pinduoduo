page {
    background: #f1f1f1;
}

.img {
    height: 200rpx;
    width: 100%;
    display: flex;
    justify-content: center;
    background: #000;
    align-items: center;
    color: #fff;
    font-size: 25rpx;
    position: relative;
}

.img image {
    width: 20%;
    border-radius: 100rpx;
}

.img view {
    margin-left: 10rpx;
}

.img view:first-child {
    font-size: 35rpx;
}

.setting {
    position: absolute;
    right: 10rpx;
    top: 10rpx;
    font-size: 35rpx;
}

.allready {
    display: flex;
    justify-content: space-between;
    background: #fff;
}

.allready view {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    color: #999;
}

.allready view text {
    width: 150rpx;
}

.allready image {
    width: 10%;
}

.order {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    font-size: 25rpx;
    color: #999;
    background: #fff;
    padding: 15rpx 0;
}

.order-img {
    width: 25%;
    display: flex;
    flex-direction: column;
    text-align: center;
}

.image {
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.image image {
    width: 50%;
}

.color {
    color: #000;
}

.address {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 0 15rpx;
    margin-top: 15rpx;
    background: #fff;
}

.address image {
    width: 2.5%;
}

.title {
    width: 100%;
    height: 60rpx;
    background: #000;
    color: #fff;
    font-size: 35rpx;
    line-height: 60rpx;
    text-align: center;
    margin-top: 320rpx;
}

.con {
    width: 100%;
    height: auto;
    margin-top: 15rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
}

.con navigator {
    width: 45%;
    height: auto;
    margin-bottom: 15rpx;
    padding: 15rpx;
    background: #fff;
}


navigator image {
    width: 100%;
}

.block image {
    width: 100%;
}

.con-text {
    height: 60rpx;
    width: 100%;
    font-size: 25rpx;
    color: #333;
    line-height: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.monthSale {
    font-size: 25rpx;
    color: #999;
}

.con-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
}

.con-footer .footer-left {
    font-size: 25rpx;
    color: #f00;
}

.avatarUrl {
    position: relative;
    width: auto;
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}

.avatarUrl image {
    width: 45rpx;
    border-radius: 30rpx;
    position: absolute;
    top: -25rpx;
    left: -45rpx;
}

.avatarUrl :first-child {
    left: -70rpx;
    z-index: 99;
}
