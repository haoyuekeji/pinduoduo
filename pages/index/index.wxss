/**index.wxss**/

.search {
    display: flex;
    background: #000;
    justify-content: center;
    align-items: center;
    height: 62rpx;
    width: 100%;
}

.search-con {
    height: 44rpx;
    width: 80%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    padding: 5rpx 15rpx;
    box-sizing: border-box;
    background: #fff;
}

.search-con input {
    height: 90%;
    width: 95%;
    font-size: 30rpx;
    text-indent: 15rpx;
}

.slide-image {
    width: 100%;
}

swiper {
    width: 100%;
    margin-bottom: 15rpx;
}

swiper-item {
    height: auto;
    width: 100%;
    background: #fff;
}

swiper-item image {
    height: auto;
    width: 100%;
}

.img {
    width: 100%;
}
