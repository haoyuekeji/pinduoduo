page {
    background: #f1f1f1;
}

.cons {
    height: auto;
    width: 100%;
    display: flex;
    flex-direction: row;
    padding: 15rpx;
    box-sizing: border-box;
    background: #f1f1f1;
}

.cons-left {
    width: 20%;
}

.cons-left image {
    width: 100%;
}

.cons-right {
    height: 100%;
    font-size: 24rpx;
    width: 80%;
    padding: 0 15rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.con {
    margin-bottom: 15rpx;
}

.price {
    font-size: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.price text:first-child {
    font-size: 28rpx;
}

.price text:first-child {
    color: #f00;
}

.join {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
    background: #fff;
}

.people {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}

.people-img {
    width: 120rpx;
    height: 120rpx;
    margin: 15rpx;
    position: relative;
}

.people-img image {
    width: 100%;
    border-radius: 100rpx;
}

.people .people-img:first-child::before {
    content: '拼主';
    color: #fff;
    font-size: 18rpx;
    padding: 5rpx 15rpx;
    background: #049f00;
    border-radius: 15rpx;
    position: absolute;
    left: -5rpx;
    top: -5rpx;
}

.residue {
    width: 100%;
    text-align: center;
    font-size: 25rpx;
}

.residue text {
    color: #f00;
}

.join-sure {
    width: 100%;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 15rpx 0;
}

.join-sure text {
    height: 50rpx;
    width: 200rpx;
    text-align: center;
    padding: 5rpx 15rpx;
    background: #cc0240;
}

.needknow {
    height: 88rpx;
    width: 100%;
    color: #999;
    font-size: 20rpx;
    background: #fff;
    line-height: 88rpx;
    padding: 0 15rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    margin-top: 15rpx;
}

.needknow text:first-child {
    color: #000;
    font-size: 28rpx;
}

.container {
    position: relative;
}

.haoyue {
    width: 100%;
    color: #999;
    font-size: 30rpx;
    text-align: center;
    position: absolute;
    bottom: 15rpx;
    left: 0;
}

.jia {
    height: 120rpx;
    width: 120rpx;
    text-align: center;
    line-height: 120rpx;
    font-size: 60rpx;
    border: 1rpx dashed #999;
    border-radius: 80rpx;
    position: absolute;
    left: 0;
    top: 0;
}
