/* 模板文件wxss  */
@import "../template/template.wxss";


page {
    background: #f1f1f1;
}

.allready {
    display: flex;
    justify-content: space-between;
    background: #fff;
}

.allready view {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    color: #999;
}

.allready view text {
    width: 150rpx;
}

.allready image {
    width: 10%;
}

.order {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    font-size: 25rpx;
    color: #999;
    background: #fff;
    padding: 15rpx 0;
}

.order-img {
    width: 25%;
    display: flex;
    flex-direction: column;
    text-align: center;
}

.image {
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.image image {
    width: 50%;
}

.color {
    color: #000;
}

.cover {
    height: 100%;
    width: 100%;
    background: rgba(0, 0, 0, 0.4);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9999;
}