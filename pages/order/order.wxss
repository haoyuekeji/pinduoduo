page {
    background: #f1f1f1;
}

.allready {
    display: flex;
    justify-content: space-between;
    background: #fff;
}

.allready view {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    color: #999;
}

.allready view text {
    width: 150rpx;
}

.allready image {
    width: 10%;
}

.order {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    font-size: 25rpx;
    color: #999;
    background: #fff;
    padding: 15rpx 0;
}

.order-img {
    width: 25%;
    display: flex;
    flex-direction: column;
    text-align: center;
}

.image {
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.image image {
    width: 50%;
}

.color {
    color: #000;
}

.cons {
    height: auto;
    width: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
    margin-top: 15rpx;
}

.zanwu {
    font-size: 30rpx;
    position: absolute;
    top: 20rpx;
    left: 0;
    z-index: -1;
}

.block {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    background: #fff;
    margin-bottom: 5rpx;
}

.img {
    width: 25%;
    padding: 15rpx 5rpx;
    box-sizing: border-box;
}

.img image {
    width: 100%;
}

.con {
    height: auto;
    width: 75%;
    padding: 15rpx;
    font-size: 30rpx;
    display: flex;
    flex-direction: column;
}

.con text {
    height: 80rpx;
    width: 100%;
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.details {
    height: auto;
    width: 100%;
    color: #999;
    font-size: 25rpx;
}

.details text {
    font-size: 30rpx;
    color: #f40000;
}

.diffent {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    padding-bottom: 15rpx;
}

.diffent view {
    height: 58rpx;
    min-width: 130rpx;
    padding: 0 15rpx;
    text-align: center;
    line-height: 58rpx;
    margin-left: 15rpx;
    font-size: 28rpx;
    color: #fff;
}

.diffent button {
   height: 58rpx;
    min-width: 130rpx;
     padding: 0 15rpx; 
    text-align: center;
    line-height: 58rpx;
    margin-left: 15rpx;
    font-size: 28rpx;
    color: #fff;
}

.background-cancle {
    background: #999;
}

.bold-pay {
    background: #cc0240;
}

.black-button{
    background: #000;
}